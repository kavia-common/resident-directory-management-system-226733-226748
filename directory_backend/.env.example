# Required for Postgres connectivity (provided by resident_db container runtime)
POSTGRES_URL=postgresql://appuser:dbuser123@localhost:5001/myapp

# Required for JWT signing
JWT_SECRET=change_me_to_a_long_random_string

# Optional CORS controls (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000
ALLOWED_METHODS=GET,POST,PUT,DELETE,PATCH,OPTIONS
ALLOWED_HEADERS=Content-Type,Authorization

# Optional JWT metadata
JWT_ISSUER=resident-directory-backend
JWT_AUDIENCE=resident-directory-frontend
JWT_EXP_MINUTES=480

# Optional uploads
UPLOAD_DIR=uploads
PUBLIC_BASE_URL=http://localhost:3001
